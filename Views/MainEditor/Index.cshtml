@model IEnumerable<ITUE.Models.Material>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Account_Layout.cshtml";
}

<main class="mt-4 ml-3">
    <h3 class="mt-4">Личный кабинет главного редактора</h3>
    <hr />

    <div class="col no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow h-md-250 position-relative" style="width:400px">
        <br />
        <a class="btn btn-warning mb-3" style="width:350px" href="/MainEditor/SentMaterials">Все Поступившие Материалы <span class="badge badge-light">@Model.Where(m => m.Status != "Published" && m.Status != "Rejected" && m.Status != "Accepted").Count()</span> </a>
        <br />
        <a class="btn btn-primary mb-3" style="width:350px" href="/MainEditor/AcceptedMaterials">
            <svg class="bi bi-bookmark-check" width="1.5em" height="1.5em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M4.5 2a.5.5 0 0 0-.5.5v11.066l4-2.667 4 2.667V8.5a.5.5 0 0 1 1 0v6.934l-5-3.333-5 3.333V2.5A1.5 1.5 0 0 1 4.5 1h4a.5.5 0 0 1 0 1h-4z" />
                <path fill-rule="evenodd" d="M15.854 2.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L12.5 4.793l2.646-2.647a.5.5 0 0 1 .708 0z" />
            </svg>
            Принятые к публикации материалы
            <span class="badge badge-light">@Model.Where(m => m.Status == "Accepted").Count()</span>
        </a>
        <ul type="circle">
            <li class="mb-2">
                <a href="/MainEditor/PublishedMaterials">Все опубликованные материалы</a>
            </li>
            <li class="mb-4">
                <a href="/MainEditor/RejectedMaterials">Все отклоненные материалы</a>
            </li>
        </ul>
        <hr />
        <a class="btn btn-success mb-3" href="/MainEditor/Create">Добавить новую публикацию</a>
    </div>

    <br />
    <ul class="nav flex-column">
        <li class="nav-item">
            <h5 class="btn btn-info">
                <a class="text-white" href="/News/Index">
                    <svg class="bi bi-newspaper" width="1.5em" height="1.5em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M0 2A1.5 1.5 0 0 1 1.5.5h11A1.5 1.5 0 0 1 14 2v12a1.5 1.5 0 0 1-1.5 1.5h-11A1.5 1.5 0 0 1 0 14V2zm1.5-.5A.5.5 0 0 0 1 2v12a.5.5 0 0 0 .5.5h11a.5.5 0 0 0 .5-.5V2a.5.5 0 0 0-.5-.5h-11z" />
                        <path fill-rule="evenodd" d="M15.5 3a.5.5 0 0 1 .5.5V14a1.5 1.5 0 0 1-1.5 1.5h-3v-1h3a.5.5 0 0 0 .5-.5V3.5a.5.5 0 0 1 .5-.5z" />
                        <path d="M2 3h10v2H2V3zm0 3h4v3H2V6zm0 4h4v1H2v-1zm0 2h4v1H2v-1zm5-6h2v1H7V6zm3 0h2v1h-2V6zM7 8h2v1H7V8zm3 0h2v1h-2V8zm-3 2h2v1H7v-1zm3 0h2v1h-2v-1zm-3 2h2v1H7v-1zm3 0h2v1h-2v-1z" />
                    </svg>
                    Управление новостями
                </a>
            </h5>
        </li>
        <li class="mt-5">
            <h5>
                <a href="/Manage/ChangePassword">
                    Изменить пароль
                </a>
            </h5>
        </li>
    </ul>
</main>