@model IEnumerable<ITUE.Models.News>

@{
    ViewBag.Title = "News";
    Layout = "~/Views/Shared/_Account_Layout.cshtml";
}

<nav class="mt-3" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/MainEditor/Index">Личный кабинет</a></li>
        <li class="breadcrumb-item active" aria-current="page">Управление новостями</li>
    </ol>
</nav>

<h3 class="mt-4">Управление новостями</h3>
<hr />
<a class="btn btn-success mb-3" href="/News/CreateNews">Добавить новость</a>
<br />
<ul type="circle">
    <li class="mb-2">
        <h5>
            <a href="/News/ActualNews">Все актуальные новости</a>
            <span class="badge badge-light">@Model.Where(m => m.Status == "New").Count()</span>
        </h5>
    </li>
    <li class="mb-2">
        <h5>
            <a href="/News/IrrelevantNews">Архив новостей</a>
            <span class="badge badge-light"> @Model.Where(m => m.Status == "Old").Count() </span>
        </h5>
    </li>
</ul>