@model ITUE.Models.News

@{
    ViewBag.Title = "CreateNews";
    Layout = "~/Views/Shared/_Account_Layout.cshtml";
}

    <nav class="mt-3" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/MainEditor/Index">Личный кабинет</a></li>
            <li class="breadcrumb-item"><a href="/News/Index">Управление новостями</a></li>
            <li class="breadcrumb-item active" aria-current="page">Добавление новости</li>
        </ol>
    </nav>

<main class="container">
    <br />
    <h2>Добавление новости</h2>
    <hr />

    @using (Html.BeginForm("CreateNews", "News", FormMethod.Post, new { @class = "mt-4 was-validated" }))
    {
        @Html.LabelFor(m => m.TitleRus, "Заголовок новости на русском языке")
        @Html.TextAreaFor(m => m.TitleRus, new { @class = "form-control is-invalid mb-3", required = "" })

        @Html.LabelFor(m => m.TitleEng, "Заголовок новости на английском языке")
        @Html.TextAreaFor(m => m.TitleEng, new { @class = "form-control is-invalid mb-3", required = "" })
        <hr />

        <!-- Добавление текста новости -->
        <div class="mb-3">
            @Html.LabelFor(m => m.TextRus, "Описание новости на русском языке")
            @Html.TextAreaFor(m => m.TextRus, new { @class = "form-control is-invalid mb-3", required = "" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.TextEng, "Описание новости на английском языке")
            @Html.TextAreaFor(m => m.TextEng, new { @class = "form-control is-invalid mb-3", required = "" })
        </div>

        <div class="row mx-1 mb-5 justify-content-between align-items-end">
            <input class="btn btn-primary" type="submit" value="Добавить" />
        </div>
    }
</main>